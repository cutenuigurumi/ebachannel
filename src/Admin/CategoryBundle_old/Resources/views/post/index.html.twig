{% extends '::base.html.twig' %}

{% block body -%}
    <h1>カテゴリ一覧</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">編集/削除</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	<a href="{{ path('post_new') }}">新しいカテゴリを作成する </a>
    {% endblock %}
